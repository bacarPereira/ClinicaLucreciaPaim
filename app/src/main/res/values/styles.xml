<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextEstilo">
        <item name="colorControlNormal">#b3b3ad</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="colorControlHighlight">#FFFFFF</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextEstilo_center">
        <item name="colorControlNormal">#b3b3ad</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="colorControlHighlight">#FFFFFF</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextEstilo_multi_line">
        <item name="colorControlNormal">#b3b3ad</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="colorControlHighlight">#FFFFFF</item>
        <item name="android:singleLine">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--TEMA TXT CARTAO GESTANTE-->
    <style name="txt_gestant_estilo">
        <item name="android:textColor">@color/colorAzul</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txt_valor_gestant_estilo">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txt_gestant_estilo_center">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txt_normal">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyStyleProgress" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>